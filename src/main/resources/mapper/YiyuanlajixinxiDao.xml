<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.YiyuanlajixinxiDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.YiyuanlajixinxiEntity" id="yiyuanlajixinxiMap">
        <result property="lajimingcheng" column="lajimingcheng"/>
        <result property="lajifenlei" column="lajifenlei"/>
        <result property="lajishuoming" column="lajishuoming"/>
        <result property="chulifangshi" column="chulifangshi"/>
        <result property="tianjiariqi" column="tianjiariqi"/>
        <result property="yonghuming" column="yonghuming"/>
        <result property="shhf" column="shhf"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.YiyuanlajixinxiVO" >
		SELECT * FROM yiyuanlajixinxi  yiyuanlajixinxi         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.YiyuanlajixinxiVO" >
		SELECT  yiyuanlajixinxi.* FROM yiyuanlajixinxi  yiyuanlajixinxi
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.YiyuanlajixinxiView" >

		SELECT  yiyuanlajixinxi.* FROM yiyuanlajixinxi  yiyuanlajixinxi 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.YiyuanlajixinxiView" >
		SELECT * FROM yiyuanlajixinxi  yiyuanlajixinxi <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM yiyuanlajixinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
        limit 10
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM yiyuanlajixinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM yiyuanlajixinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM yiyuanlajixinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>
   
    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM yiyuanlajixinxi  
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
        limit 10
    </select>



	
</mapper>
